@{
    Layout = "/Master.cshtml";
}
@section head
{
    <link href="css/page.css" rel="stylesheet" type="text/css" />
}
@section title
{
    My Title
}

        <form id="form" method="post" action="go">
            @Model.Message : <input type="text" name="name" />
            <input type="submit" value="Go!" />
        </form>
    
<div id="popup" style="display:none">
</div>

@section scripts
{
<script type="text/javascript">
    $(document).ready(function () {
       
        $("#form").ajaxForm({
            success: function (response) {
                $("#popup").text(response).dialog({
                    modal: true,
                    buttons: {
                        Ok: function () {
                            $(this).dialog("close");
                        }
                    }
                });
            }
        });
    });
</script>
}